/*
 * Minimal Baseline Device Tree Example
 *
 * Baseline defines hardware resources only (no instances).
 * Usage: kerf init --input=minimal.dts --apply
 */

/multikernel-v1/;

/ {
    compatible = "linux,multikernel-host";

    resources {
        cpus {
            total = <8>;
            host-reserved = <0 1>;
            available = <2 3 4 5 6 7>;
        };
        
        memory {
            total-bytes = <0x0 0x200000000>;      // 8GB
            host-reserved-bytes = <0x0 0x40000000>; // 1GB
            memory-pool-base = <0x40000000>;
            memory-pool-bytes = <0x0 0x1C000000>;   // 7GB
        };
    };
};
